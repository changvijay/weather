  <script>
    // Get the chart data passed from the server
    const chartData = <%- JSON.stringify(chartData) %>;

    // Create a new chart instance
    const ctx = document.getElementById('myChart').getContext('2d');
    const myChart = new Chart(ctx, {
      type: 'line',
      data: chartData

    });

